@using UranusAdmin.Dto
@model HomeworkDto

<h1>Are you sure you want to delete this homework?</h1>

<form method="post" asp-action="Delete">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter title" disabled/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter description" disabled/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Deadline">Deadline</label>
        <input asp-for="Deadline" type="date" class="form-control" placeholder="Enter deadline" disabled/>
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LessonId">Select Lesson</label>
        <select asp-for="LessonId" class="form-select" disabled>
            <option>-- Select Lesson</option>
            @foreach (var item in Model.Lessons)
            {
                <option value="@item.Id">@item.Title</option>
            }
        </select>
    </div>
</form>

<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>