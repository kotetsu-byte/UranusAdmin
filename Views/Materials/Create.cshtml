@using UranusAdmin.Dto
@model MaterialDto

<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Url">Url</label>
        <input asp-for="Url" class="form-control" placeholder="Enter url" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HomeworkId">Select Homework</label>
        <select asp-for="HomeworkId" class="form-select">
            <option>-- Select Homework --</option>
            @foreach(var item in Model.Homeworks)
            {
                <option value="@item.Id">@item.Title</option>
            }
        </select>
    </div>

    <button class="btn btn-primary" type="submit">Submit</button>
</form>