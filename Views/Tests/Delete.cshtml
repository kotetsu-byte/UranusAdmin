@using UranusAdmin.Dto
@model TestDto

<h1>Are you sure you want to delete this test?</h1>

<form method="post" asp-action="Delete">
    <div class="form-group">
        <label asp-for="Question">Name</label>
        <input asp-for="Question" class="form-control" placeholder="Enter question" disabled/>
        <span asp-validation-for="Question" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Answer1">Answer 1</label>
        <input asp-for="Answer1" class="form-control" placeholder="Enter answer 1" disabled/>
        <span asp-validation-for="Answer1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Answer2">Answer 2</label>
        <input asp-for="Answer2" class="form-control" placeholder="Enter answer 2" disabled/>
        <span asp-validation-for="Answer2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Answer3">Answer 3</label>
        <input asp-for="Answer3" class="form-control" placeholder="Enter answer 3" disabled/>
        <span asp-validation-for="Answer3" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Answer4">Answer 4</label>
        <input asp-for="Answer4" class="form-control" placeholder="Enter answer 4" disabled/>
        <span asp-validation-for="Answer4" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CorrectAnswer">Correct Answer</label>
        <input asp-for="CorrectAnswer" class="form-control" placeholder="Enter correct answer" disabled/>
        <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Points">Points</label>
        <input asp-for="Points" class="form-control" placeholder="Enter points" disabled/>
        <span asp-validation-for="Points" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CourseId">Select Course</label>
        <select asp-for="CourseId" class="form-select">
            <option value="0" disabled>-- Select Course --</option>
            @foreach (var item in Model.Courses)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        <span asp-validation-for="Points" class="text-danger"></span>
    </div>
</form>

<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>