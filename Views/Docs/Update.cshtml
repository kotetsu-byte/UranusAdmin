@using UranusAdmin.Dto
@model DocDto

<form method="post" asp-action="Update">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Url">Url</label>
        <input asp-for="Url" class="form-control" placeholder="Enter url" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lesson.Title">Lesson</label>
        <select asp-for="Lesson.Title" class="form-select">
            <option>-- Select Lesson --</option>
            @foreach (var item in Model.Lessons)
            {
                <option>@item</option>
            }
        </select>
    </div>

    <button class="btn btn-primary" type="submit">Submit</button>
</form>